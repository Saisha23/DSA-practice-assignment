1. Calculate frequency of a character

void Printfrequency(string str)
{
  int freq[26] = {0};
  for (int i = 0; i < str.length(); i++)
  {
    freq[str[i] - 'a']++;
  }
  for (int i = 0; i < 26; i++)
  {
    if (freq[i] != 0)
    {
      cout << (char)(i + 'a') << freq[i] << " ";
    }
  }
}

2. find factorial

class Solution {
  public:
    void printTillN(int n) {
        // code here
        if (n==0) return ;
        
        printTillN(n-1);
        cout<< n << " ";
    }
};
